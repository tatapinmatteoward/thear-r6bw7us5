---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-pinterest', url: '#' }
];
---

<footer class="bg-amber-900 text-amber-100 py-8 border-t-4 border-emerald-700">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-serif">&copy; {currentYear} The Artisan Pie. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-amber-100 hover:text-emerald-200 transition-colors duration-200">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>