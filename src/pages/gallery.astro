---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Gallery - The Artisan Pie";
const pageDescription = "Explore our warm, rustic gallery showcasing the craft and culture of porky pie. From signature creations to behind-the-scenes artistry, discover the heart of our pies.";

const signaturePies = [
  {
    name: "Classic Porky Delight",
    description: "A flaky crust enveloping tender pork, herbs, and a hint of apple cider glaze. Baked to rustic perfection.",
    image: "classic-porky"
  },
  {
    name: "Smoky Bacon Harvest",
    description: "Layers of smoked bacon, root vegetables, and creamy cheese in a hearty, warming pie.",
    image: "bacon-harvest"
  },
  {
    name: "Spiced Chorizo Fiesta",
    description: "Bold flavors of chorizo, roasted peppers, and a blend of warm spices in a traditional crust.",
    image: "chorizo-fiesta"
  },
  {
    name: "Herb-Crusted Hunter's Dream",
    description: "A rich blend of wild mushrooms, game meats, and aromatic herbs in a golden, flaky crust.",
    image: "hunter-dream"
  }
];

const galleryImages = [
  { id: 1, alt: "Freshly baked porky pie with golden crust" },
  { id: 2, alt: "Close-up of porky pie filling" },
  { id: 3, alt: "Baker preparing dough in rustic kitchen" },
  { id: 4, alt: "Traditional wooden pie board" },
  { id: 5, alt: "Oven fresh pies waiting to be served" },
  { id: 6, alt: "Customer enjoying a warm slice" },
  { id: 7, alt: "Artisanal pie making process" },
  { id: 8, alt: "Rustic kitchen with vintage baking tools" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative">
    {/* Hero Section */}
    <div class="relative bg-gradient-to-r from-amber-900 to-amber-700 py-24 md:py-32 overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-serif font-bold text-amber-100 mb-6">Gallery</h1>
          <p class="text-xl md:text-2xl text-amber-200 font-serif max-w-2xl mx-auto">
            Celebrating the Craft and Culture of Porky Pie
          </p>
          <div class="mt-8 flex justify-center">
            <div class="w-24 h-1 bg-amber-300 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>

    {/* Signature Pies Section */}
    <section class="py-16 bg-amber-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-amber-900 mb-4">Signature Pies</h2>
          <p class="text-lg text-amber-700 max-w-2xl mx-auto">
            Discover our lineup of timeless classics and innovative twists, all baked with love in our cozy kitchens.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {signaturePies.map((pie, index) => (
            <div 
              key={index} 
              class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-xl"
            >
              <div class="h-48 bg-gradient-to-br from-amber-200 to-amber-400 relative">
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="bg-amber-500 rounded-full w-24 h-24 flex items-center justify-center">
                    <i class="fas fa-utensil-spoon text-amber-100 text-3xl"></i>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-serif font-bold text-amber-900 mb-2">{pie.name}</h3>
                <p class="text-amber-700">{pie.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Gallery Section */}
    <section class="py-16 bg-amber-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-amber-900 mb-4">Behind the Scenes</h2>
          <p class="text-lg text-amber-700 max-w-2xl mx-auto">
            Immerse yourself in the golden crusts, savory fillings, and joyful moments that define our celebration of porky pie culture.
          </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          {galleryImages.map((image) => (
            <div 
              key={image.id} 
              class="aspect-square overflow-hidden rounded-lg shadow-md transform transition-all duration-300 hover:scale-105 hover:shadow-xl"
            >
              <div class="w-full h-full bg-gradient-to-br from-amber-300 to-amber-500 flex items-center justify-center">
                <div class="text-center p-4">
                  <div class="bg-amber-700 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-camera text-amber-100 text-2xl"></i>
                  </div>
                  <p class="text-amber-900 font-serif text-sm">{image.alt}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Process Section */}
    <section class="py-16 bg-amber-900 text-amber-100">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Our Crafting Process</h2>
            <p class="text-xl text-amber-200">
              From dough to delight, each pie tells a story
            </p>
          </div>
          
          <div class="space-y-8">
            <div class="flex flex-col md:flex-row items-center">
              <div class="md:w-1/3 mb-6 md:mb-0 flex justify-center">
                <div class="bg-amber-700 rounded-full w-24 h-24 flex items-center justify-center">
                  <i class="fas fa-seedling text-amber-100 text-3xl"></i>
                </div>
              </div>
              <div class="md:w-2/3 md:pl-8">
                <h3 class="text-2xl font-serif font-bold mb-3">Careful Selection</h3>
                <p class="text-amber-200">
                  We source only the finest pork and seasonal ingredients, ensuring each pie reflects the quality and tradition we hold dear.
                </p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row-reverse items-center">
              <div class="md:w-1/3 mb-6 md:mb-0 flex justify-center">
                <div class="bg-amber-700 rounded-full w-24 h-24 flex items-center justify-center">
                  <i class="fas fa-hands text-amber-100 text-3xl"></i>
                </div>
              </div>
              <div class="md:w-2/3 md:pr-8">
                <h3 class="text-2xl font-serif font-bold mb-3">Traditional Techniques</h3>
                <p class="text-amber-200">
                  Our master bakers use age-old methods passed down through generations, creating pies that are both comforting and extraordinary.
                </p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row items-center">
              <div class="md:w-1/3 mb-6 md:mb-0 flex justify-center">
                <div class="bg-amber-700 rounded-full w-24 h-24 flex items-center justify-center">
                  <i class="fas fa-oven text-amber-100 text-3xl"></i>
                </div>
              </div>
              <div class="md:w-2/3 md:pl-8">
                <h3 class="text-2xl font-serif font-bold mb-3">Perfectly Baked</h3>
                <p class="text-amber-200">
                  Each pie is baked to golden perfection in our wood-fired oven, ensuring that every bite delivers the warmth and flavor our customers love.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Quote Section */}
    <section class="py-16 bg-gradient-to-r from-amber-800 to-amber-900 text-amber-100">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <div class="text-5xl mb-6">‚ùù</div>
          <blockquote class="text-xl md:text-2xl font-serif italic mb-8">
            Every pie is a story of tradition, crafted with passion, and baked with care.
          </blockquote>
          <p class="text-lg text-amber-200">- The Artisan Pie Family</p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  body {
    font-family: 'Georgia', serif;
  }
  
  .hero-pattern {
    background: linear-gradient(rgba(139, 69, 19, 0.9), rgba(139, 69, 19, 0.9)), 
                url('data:image/svg+xml;base64,');
    background-size: cover;
    background-position: center;
  }
  
  .hover\:scale-105:hover {
    transform: scale(1.05);
  }
</style>