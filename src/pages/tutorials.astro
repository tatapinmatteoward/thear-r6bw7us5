---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Tutorials: Unmasking Porky Pies Step by Step";
const pageDescription = "Dive into our tech-savvy tutorials on detecting deception through science, psychology, and data visualization. From body language analysis to AI lie detection tools, master the skills to separate fact from fiction.";
const tutorials = [
  {
    id: 1,
    title: "Body Language Basics",
    description: "Learn to decode micro-expressions and unconscious movements that reveal deception",
    icon: "fas fa-eye",
    level: "Beginner"
  },
  {
    id: 2,
    title: "Psychological Triggers",
    description: "Understand how stress and cognitive load affect truthful communication",
    icon: "fas fa-brain",
    level: "Intermediate"
  },
  {
    id: 3,
    title: "AI Lie Detection Tools",
    description: "Explore cutting-edge software and apps for analyzing speech and behavior patterns",
    icon: "fas fa-robot",
    level: "Advanced"
  },
  {
    id: 4,
    title: "Data Visualization Techniques",
    description: "Transform complex deception patterns into digestible visual insights",
    icon: "fas fa-chart-line",
    level: "Intermediate"
  },
  {
    id: 5,
    title: "Interview Strategies",
    description: "Master structured questioning techniques to elicit truthful responses",
    icon: "fas fa-comments",
    level: "All Levels"
  },
  {
    id: 6,
    title: "Cross-Cultural Communication",
    description: "Navigate differences in non-verbal communication across diverse contexts",
    icon: "fas fa-globe-americas",
    level: "Advanced"
  }
];

const features = [
  {
    title: "Science-Backed",
    description: "Grounded in research from neurology to behavioral economics",
    icon: "fas fa-flask"
  },
  {
    title: "Visual Learning",
    description: "Infographics and diagrams make complex concepts crystal clear",
    icon: "fas fa-images"
  },
  {
    title: "Hands-On",
    description: "Interactive exercises and tools to practice in real-time",
    icon: "fas fa-hand-holding-heart"
  },
  {
    title: "Tech-Savvy",
    description: "Explore AI apps, data analytics, and digital forensics",
    icon: "fas fa-laptop-code"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative overflow-hidden">
    {/* Hero Section */}
    <div class="bg-gradient-to-r from-primary to-accent py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          {pageTitle}
        </h1>
        <p class="text-xl md:text-2xl text-white max-w-3xl mx-auto">
          <i class="fas fa-quote-left mr-2"></i>
          Unveiling the Science and Stories Behind Porky Pies
          <i class="fas fa-quote-right ml-2"></i>
        </p>
      </div>
    </div>

    {/* Tagline Background */}
    <div class="bg-gray-900 py-8">
      <div class="container mx-auto px-4 text-center">
        <p class="text-white text-lg md:text-xl italic">
          "The truth is rarely simple. Uncovering it requires skill, science, and an eye for detail."
        </p>
      </div>
    </div>

    {/* Why Learn Section */}
    <section class="py-16 bg-gradient-to-br from-gray-50 to-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-primary mb-12">Why Learn with Pieologist?</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map((feature) => (
            <div key={feature.title} class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
              <div class="flex justify-center mb-4">
                <i class={`${feature.icon} text-4xl text-accent`}></i>
              </div>
              <h3 class="text-xl font-bold text-center text-primary mb-2">{feature.title}</h3>
              <p class="text-gray-700 text-center">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Tutorials Grid */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-4">Our Comprehensive Tutorial Suite</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            From foundational skills to advanced techniques, our tutorials equip you with tools to detect deception in any situation
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {tutorials.map((tutorial) => (
            <div key={tutorial.id} class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <div class="bg-accent text-white rounded-full w-12 h-12 flex items-center justify-center">
                    <i class={`${tutorial.icon} text-xl`}></i>
                  </div>
                  <span class="bg-primary text-white text-xs font-bold px-3 py-1 rounded-full">
                    {tutorial.level}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-primary mb-2">{tutorial.title}</h3>
                <p class="text-gray-700 mb-4">{tutorial.description}</p>
                <button class="text-accent font-semibold flex items-center">
                  Explore Tutorial
                  <i class="fas fa-arrow-right ml-2"></i>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Interactive Preview */}
    <section class="py-16 bg-gradient-to-r from-primary to-accent text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6">Interactive Learning Experience</h2>
          <p class="text-xl mb-8">
            Our platform combines data visualization, real-time analysis, and interactive case studies to accelerate your learning
          </p>
          
          <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-2xl p-8 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <i class="fas fa-chart-bar text-3xl mb-3 block"></i>
                <h3 class="font-bold text-lg mb-2">Data Analysis</h3>
                <p class="text-sm">Visualize behavioral patterns and deception indicators</p>
              </div>
              <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <i class="fas fa-video text-3xl mb-3 block"></i>
                <h3 class="font-bold text-lg mb-2">Case Studies</h3>
                <p class="text-sm">Real-world scenarios with step-by-step analysis</p>
              </div>
              <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <i class="fas fa-mobile-alt text-3xl mb-3 block"></i>
                <h3 class="font-bold text-lg mb-2">Mobile Access</h3>
                <p class="text-sm">Learn on-the-go with our mobile-friendly platform</p>
              </div>
            </div>
          </div>
          
          <button class="bg-white text-primary font-bold px-8 py-3 rounded-full text-lg hover:bg-gray-100 transition-colors duration-300">
            Start Learning Today
          </button>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-primary mb-6">Ready to Become a Porky Pie Master?</h2>
          <p class="text-lg text-gray-700 mb-8">
            Join thousands of professionals who trust Pieologist to sharpen their deception detection skills
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="bg-primary text-white font-bold px-8 py-3 rounded-full hover:bg-blue-800 transition-colors duration-300">
              Browse All Tutorials
            </button>
            <button class="border-2 border-primary text-primary font-bold px-8 py-3 rounded-full hover:bg-primary hover:text-white transition-colors duration-300">
              Request Preview
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  .pulse {
    animation: pulse 2s infinite;
  }
</style>